defineEnvVar PHARO_MAJOR_VERSION OPTIONAL "The major version of Pharo" "9";
defineEnvVar PHARO_MINOR_VERSION OPTIONAL "The minor version of Pharo" "0";
defineEnvVar PHARO_VERSION OPTIONAL "The version of Pharo" "${PHARO_MAJOR_VERSION}.${PHARO_MINOR_VERSION}";
defineEnvVar PHARO_VERSION_ZEROCONF OPTIONAL "The Pharo version, as expected by the Zeroconf script in get.pharo.org" '$(echo ${PHARO_VERSION} | tr -d '.')';
defineEnvVar PHARO_FOLDER OPTIONAL "The Pharo folder" 'pharo${PHARO_MAJOR_VERSION}';
defineEnvVar PHAROVM_VERSION OPTIONAL "The version of the Pharo VM" '5.0-202002121043';
